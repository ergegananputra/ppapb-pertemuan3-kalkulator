<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_background"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/appbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="normal"

        android:layout_margin="20dp"

        android:textColor="@color/md_theme_dark_onSurfaceVariant"
        android:text="@string/appbar_title_app" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="370dp"
        android:layout_height="243dp"
        android:layout_below="@id/appbar_title"
        android:layout_alignStart="@id/appbar_title"
        android:layout_alignEnd="@id/appbar_title"


        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="34sp"
        android:textStyle="normal" />


    <Button
        android:id="@+id/button_clear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/hasil"

        android:layout_alignStart="@id/hasil"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"

        android:textColor="@color/md_theme_dark_onErrorContainer"
        android:backgroundTint="@color/md_theme_dark_errorContainer"

        android:onClick="inputButton"
        android:text="C"
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/button_clear"

        android:layout_alignStart="@id/button_clear"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="7"
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/button7"

        android:layout_alignStart="@id/button_clear"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="4"
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/button4"

        android:layout_alignStart="@id/button_clear"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="1"
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button_etc"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/button1"

        android:layout_alignStart="@id/button7"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"


        android:onClick="inputButton"
        android:text="^"
        android:textSize="26sp"
        app:cornerRadius="0dp" />


    <Button
        android:id="@+id/button_prnth"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_toRightOf="@id/button_clear"
        android:layout_alignTop="@id/button_clear"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="()"
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button_percentage"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_toRightOf="@id/button_prnth"
        android:layout_alignTop="@id/button_clear"

        android:layout_marginStart="10dp"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="%"
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_toRightOf="@id/button_percentage"
        android:layout_alignTop="@id/button_clear"

        android:layout_marginStart="10dp"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="/"
        android:textSize="26sp"
        app:cornerRadius="0dp" />


    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button7"
        android:layout_alignStart="@id/button_prnth"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="8"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button4"
        android:layout_alignStart="@id/button_prnth"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="5"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button1"
        android:layout_alignStart="@id/button_prnth"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="2"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button0"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button_etc"
        android:layout_alignStart="@id/button_prnth"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="0"
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button7"
        android:layout_alignStart="@id/button_percentage"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="9"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button4"
        android:layout_alignStart="@id/button_percentage"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="6"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button1"
        android:layout_alignStart="@id/button_percentage"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="3"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button_float"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button_etc"
        android:layout_alignStart="@id/button_percentage"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="."
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button_times"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button9"
        android:layout_alignStart="@id/button_divide"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="x"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button_substract"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button4"
        android:layout_alignStart="@id/button_divide"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="-"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button_plus"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button1"
        android:layout_alignStart="@id/button_divide"

        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:backgroundTint="@color/md_theme_dark_tertiaryContainer"

        android:onClick="inputButton"
        android:text="+"
        android:textSize="26sp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/button_equals"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/button_etc"
        android:layout_alignStart="@id/button_divide"

        android:textColor="@color/md_theme_dark_onPrimaryContainer"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"

        android:onClick="inputButton"
        android:text="="
        android:textSize="26sp"
        app:cornerRadius="0dp" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_divide"

        android:layout_alignEnd="@id/button_divide"
        android:background="@color/md_theme_dark_background"

        android:onClick="backspace"
        android:src="@drawable/baseline_backspace_24"
        tools:ignore="TouchTargetSizeCheck"
        android:importantForAccessibility="no" />


</RelativeLayout>